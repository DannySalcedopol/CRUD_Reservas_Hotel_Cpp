#include <windows.h>

HWND txtNombre, txtHabitacion, txtFecha, txtEstado;

LRESULT CALLBACK WindowProc(HWND hwnd, UINT uMsg, WPARAM wParam, LPARAM lParam)
{
    switch (uMsg)
    {
    case WM_CREATE:
        CreateWindow(L"STATIC", L"Nombre:",
            WS_VISIBLE | WS_CHILD,
            20, 20, 100, 20,
            hwnd, NULL, NULL, NULL);

        txtNombre = CreateWindow(L"EDIT", L"",
            WS_VISIBLE | WS_CHILD | WS_BORDER,
            130, 20, 200, 20,
            hwnd, NULL, NULL, NULL);

        CreateWindow(L"STATIC", L"Habitacion:",
            WS_VISIBLE | WS_CHILD,
            20, 60, 100, 20,
            hwnd, NULL, NULL, NULL);

        txtHabitacion = CreateWindow(L"EDIT", L"",
            WS_VISIBLE | WS_CHILD | WS_BORDER,
            130, 60, 200, 20,
            hwnd, NULL, NULL, NULL);

        CreateWindow(L"STATIC", L"Fecha:",
            WS_VISIBLE | WS_CHILD,
            20, 100, 100, 20,
            hwnd, NULL, NULL, NULL);

        txtFecha = CreateWindow(L"EDIT", L"",
            WS_VISIBLE | WS_CHILD | WS_BORDER,
            130, 100, 200, 20,
            hwnd, NULL, NULL, NULL);

        CreateWindow(L"STATIC", L"Estado:",
            WS_VISIBLE | WS_CHILD,
            20, 140, 100, 20,
            hwnd, NULL, NULL, NULL);

        txtEstado = CreateWindow(L"EDIT", L"",
            WS_VISIBLE | WS_CHILD | WS_BORDER,
            130, 140, 200, 20,
            hwnd, NULL, NULL, NULL);

        CreateWindow(L"BUTTON", L"Crear",
            WS_VISIBLE | WS_CHILD,
            400, 20, 120, 30,
            hwnd, (HMENU)1, NULL, NULL);

        CreateWindow(L"BUTTON", L"Mostrar",
            WS_VISIBLE | WS_CHILD,
            400, 60, 120, 30,
            hwnd, (HMENU)2, NULL, NULL);

        CreateWindow(L"BUTTON", L"Actualizar",
            WS_VISIBLE | WS_CHILD,
            400, 100, 120, 30,
            hwnd, (HMENU)3, NULL, NULL);

        CreateWindow(L"BUTTON", L"Eliminar",
            WS_VISIBLE | WS_CHILD,
            400, 140, 120, 30,
            hwnd, (HMENU)4, NULL, NULL);

        break;

    case WM_DESTROY:
        PostQuitMessage(0);
        return 0;
    }
    return DefWindowProc(hwnd, uMsg, wParam, lParam);
}

int WINAPI WinMain(HINSTANCE hInst, HINSTANCE, LPSTR, int nCmdShow)
{
    const wchar_t CLASS_NAME[] = L"CRUD_RESERVAS_HOTEL";

    WNDCLASS wc = {};
    wc.lpfnWndProc = WindowProc;
    wc.hInstance = hInst;
    wc.lpszClassName = CLASS_NAME;

    RegisterClass(&wc);

    HWND hwnd = CreateWindowEx(
        0,
        CLASS_NAME,
        L"CRUD - Reservas de Hotel",
        WS_OVERLAPPEDWINDOW,
        100, 100, 800, 500,
        NULL,
        NULL,
        hInst,
        NULL
    );

    ShowWindow(hwnd, nCmdShow);

    MSG msg = {};
    while (GetMessage(&msg, NULL, 0, 0))
    {
        TranslateMessage(&msg);
        DispatchMessage(&msg);
    }

    return 0;
}
